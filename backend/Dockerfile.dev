FROM node:20-bullseye-slim

WORKDIR /app

# Install dependencies including OpenSSL and cron
RUN apt-get update && apt-get install -y \
    openssl \
    python3 \
    make \
    g++ \
    curl \
    cron \
    && rm -rf /var/lib/apt/lists/*

# Create uploads directory
RUN mkdir -p uploads

# Copy package files
COPY package.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose the port the app runs on
EXPOSE 4001

# Make scripts executable
RUN chmod +x scripts/*.sh scripts/*.js

# Generate Prisma client after volume mount, then setup cron, run migrations and start the server
CMD /bin/bash -c "sleep 5 && npx prisma generate && npx prisma migrate deploy && npm run build && ./scripts/setup-cron.sh && npm run dev" 
# Add migration validation
COPY scripts/validate-migration.sh /app/scripts/
COPY scripts/safe-migrate.sh /app/scripts/
RUN chmod +x /app/scripts/*.sh
