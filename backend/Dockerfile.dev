FROM node:20-bullseye-slim

WORKDIR /app

# Install dependencies including OpenSSL
RUN apt-get update && apt-get install -y \
    openssl \
    python3 \
    make \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create uploads directory
RUN mkdir -p uploads

# Copy package files
COPY package.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Verify Prisma client generation
RUN node scripts/verify-prisma-client.js

# Expose the port the app runs on
EXPOSE 4001

# Use a simple bash command to run migrations and start the server
CMD /bin/bash -c "sleep 5 && npx prisma migrate deploy && npm run dev" 