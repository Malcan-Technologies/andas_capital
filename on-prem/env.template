# ==============================================
# On-Prem Signing Services Environment Template
# ==============================================
# Copy this file to .env and fill in the values
# Usage: cp env.template .env && vim .env

# ==============================================
# Client Identity
# ==============================================
CLIENT_SLUG=kredit
CLIENT_DOMAIN=kredit.my
SIGN_DOMAIN=sign.kredit.my

# ==============================================
# DocuSeal Configuration
# ==============================================
# Generate with: openssl rand -hex 32
DOCUSEAL_POSTGRES_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# Generate with: openssl rand -hex 64
DOCUSEAL_SECRET_KEY_BASE=REPLACE_WITH_64_CHAR_HEX

# API token for DocuSeal (generate from DocuSeal admin UI after first setup)
DOCUSEAL_API_TOKEN=REPLACE_AFTER_DOCUSEAL_SETUP

# HMAC secret for webhook verification
# Generate with: openssl rand -hex 32
DOCUSEAL_WEBHOOK_HMAC_SECRET=REPLACE_WITH_WEBHOOK_SECRET

# ==============================================
# Signing Orchestrator Configuration
# ==============================================
# Generate with: openssl rand -hex 32
AGREEMENTS_DB_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# API key shared with backend service
# Generate with: openssl rand -hex 32
# This same value must be set in AWS Secrets Manager for the backend
SIGNING_ORCHESTRATOR_API_KEY=REPLACE_WITH_API_KEY

# ==============================================
# MTSA (MyTrustSigner Agent) Configuration
# ==============================================
# Environment: pilot or prod
MTSA_ENV=pilot

# SOAP credentials provided by MyTrustSigner
MTSA_SOAP_USERNAME=REPLACE_WITH_MTSA_USERNAME
MTSA_SOAP_PASSWORD=REPLACE_WITH_MTSA_PASSWORD

# ==============================================
# Cloudflare Tunnel Configuration
# ==============================================
# Create tunnel: cloudflared tunnel create <client>-signing
# This token is obtained after creating the tunnel
TUNNEL_TOKEN=REPLACE_WITH_TUNNEL_TOKEN

# ==============================================
# Optional: SMTP Configuration for DocuSeal
# ==============================================
SMTP_ADDRESS=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_DOMAIN=
SMTP_FROM=noreply@kredit.my
